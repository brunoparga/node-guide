<article class="card product-item">
  <header class="card__header">
    <h1 class="product__title"><%= product.title %></h1>
  </header>
  <div class="card__image">
    <img src="<%= product.imageURL %>" alt="<%= product.title %>">
  </div>
  <div class="card__content">
    <h2 class="product__price js-price"><%= product.price %></h2>
    <p class="product__description"><%= product.description %></p>
  </div>
  <div class="card__actions">
    <% if (owner) { %>
    <a href="/admin/edit-product/<%= product._id %>" class="btn">Edit</a>
    <input type="hidden" name="_id" value="<%= product._id %>">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
    <% } else { %>
    <a href="/products/<%= product._id %>" class="btn">Details</a>
    <% if (isAuthenticated) { %>
    <%- include('../includes/add-to-cart.ejs', { product }) %>
    <% } %>
    <% } %>
  </div>
</article>
